<div id="judge_update_modal" class="modal">
  <%= simple_form_for judge, remote: true do |f| %>
    <div class="modal-content">
      <h4>Judge evaluation for <%= judge.full_name %></h4>
      <div class="row">
        <div class="col s5">
          <%= f.input :rating, wrapper_html: { class: "s12" } %>
          <%= f.input :invite_to_championship, wrapper: :materialize_boolean, wrapper_html: { class: "s12" } %>
          <%= f.input :potential_judge_advisor, wrapper: :materialize_boolean, wrapper_html: { class: "s12" } %>
          <hr>
          <%= f.input :blacklisted, label: "Do not invite back", wrapper: :materialize_boolean, wrapper_html: { class: "s12" } %>
        </div>
        <div class="col s7">
          <%= f.simple_fields_for :comments do |fc| %>
            <%= fc.input :id, as: :hidden %>
            <%= fc.input :body, label: "Comment", wrapper_html: { class: "s12" } %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
