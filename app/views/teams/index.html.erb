<h4>Teams</h4>

<% if @teams.empty? %>
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card">
        <div class="card-content">
          <span class="card-title">There are no teams</span>
          <p>Create a new team to allow users to manage events.</p>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <ul class="collection">
    <% @teams.each do |team| %>
      <li class="collection-item"><%= link_to team.name, team %></li>
    <% end %>
  </ul>
<% end %>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
  <%= link_to new_team_path, class: "btn-floating btn-large waves-effect waves-light red" do %>
    <i class="large material-icons">add</i>
  <% end %>
</div>
