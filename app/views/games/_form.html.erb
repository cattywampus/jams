<%= simple_form_for(@game) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :program %>
    <%= f.input :name %>
    <%= f.input :season %>
    <%= f.input :logo, as: :image_preview, input_html: { preview_version: :medium } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
